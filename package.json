{
  "name": "the-conjured",
  "description": "The Conjured Application",
  "version": "1.0.7",
  "main": "packages/main/dist/index.cjs",
  "author": {
    "email": "bosko.bezarevic000@gmail.com",
    "name": "xeqtr",
    "url": "https://boskodev.netlify.app/"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "dist": "electron-builder",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,json}\""
  },
  "repository": "https://github.com/xeqtrTC/chatapp-electron",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "the-conjured",
    "target": "NSIS",
    "nsis": {
      "oneClick": true,
      "installerIcon": "iconDeagle.ico",
      "uninstallerIcon": "iconDeagle.ico",
      "uninstallDisplayName": "the-conjured-uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "@types/node": "18.14.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autoprefixer": "^10.4.13",
    "cross-env": "7.0.3",
    "electron": "23.1.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "happy-dom": "8.9.0",
    "nano-staged": "0.8.0",
    "playwright": "1.31.1",
    "postcss": "^8.4.21",
    "simple-git-hooks": "2.8.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.5",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.1.4",
    "vitest": "0.29.2"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "electron-updater": "5.3.0",
    "firebase": "^9.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.8.2",
    "uuid": "^9.0.0"
  }
}
